<div class="row"><br></div>
<div class="row"><br></div>
<div class="container-fluid">
  <%= link_to '<button class="btn btn-default btn-sm">
  <i class="fa fa-arrow-left" aria-hidden="true"></i> Regresar</button>'.html_safe, control_bays_path %>
</div>
<div class="row"><br></div>
<div class="container-fluid">
  <div class="panel panel-success">
    <div class="panel-heading"><h3>Detalles de la Bahía <span class="label label-default"> <%= @bay.nomenclatura %></span></h3></div>
    <div class="panel-body">
    <div class="row"><br></div>
    <div class="row"><br></div>
     <div class="row">
     <div class="col-xs-6 col-md-3">
       <p>
        <strong>Nomenclatura:</strong>
        <%= @bay.nomenclatura %>
       </p>
      </div>
      <div class="col-xs-6 col-md-3">
       <p>
         <strong>Subestacíón perteneciente:</strong>
         <%= @bay.substation.nombre_subestacion %>
       </p>
      </div>
      <div class="col-xs-6 col-md-3">
        <p>
          <% if @bay.transformer.present? %>
            <strong>Transformador </strong>
            <%= @bay.transformer.nomenclatura %>
          <% end %>
        </p>
      </div>
      <div class="col-xs-6 col-md-3">
       <p>
          <% if @bay.reactor.present? %>
            <strong>Reactor</strong>
             <%= @bay.reactor.nomenclatura  %>
          <% end %>
       </p>
      </div>
     </div>
     <div class="row"><br></div>
     <div class="row">
       <div class="col-xs-6 col-md-3">
        <p>
          <% if @bay.lightning_arrester.present? %>
            <strong>Apartarrayos</strong>
             <%= @bay.lightning_arrester.nomenclatura %>
          <% end %>
        </p>
       </div>
       <div class="col-xs-6 col-md-3">
        <p>
          <% if @bay.battery_bank.present? %>
            <strong>Banco de Baterías</strong>
            <%= @bay.battery_bank.nomenclatura %>
          <% end %>
        </p>
       </div>
       <div class="col-xs-6 col-md-3">
        <p>
          <% if @bay.switch.present? %>
            <strong>Interruptor</strong>
             <%= @bay.switch.nomenclatura %>
           <% end %>
        </p>
       </div>
     </div>
     <% if @bay.blades.present? %>
     <div class="row">
        <div class="col-xs-6 col-md-3"></div>
        <div class="col-xs-6 col-md-3">
              <h1 class="page-header">Cuchillas</h1>
        </div>
      </div>
     <div class="row">
       <div class="col-xs-6 col-md-3">
       </div>
       <div class="col-xs-6 col-md-3">
        <p>
          <ul class="list-group">
            <% @bay.blades.each do |b| %>
              <li class="list-group-item"><%= b.nomenclatura %></li>
            <% end %>
          </ul>
        </p>
       </div>
      </div>
      <% end %>
     <div class="row"><br></div>
     <div class="row"><br></div>
     <div class="row show-grid">
        <div class="col-md-3"></div>
        <div class="col-md-3 col-md-offset-5 float_right">
            <div class="btn-toolbar" role="toolbar" aria-label="...">
               <div class="btn-group" role="group" aria-label="...">
                  <%= link_to '<button type="submit" class="btn btn-default" ><i class="fa fa-pencil" aria-hidden="true"></i>   Editar Bahía</button>'.html_safe,  edit_control_bay_path(@bay)%>
               </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
