       <%= simple_form_for(['control',@substation]) do |f| %>
        <%= f.error_notification %>
        <div class="row"><br></div>
        <div class="row"><br></div>
        <div class="row">
           <div class="col-xs-6 col-md-4">
              <div class="form-group">
                <%= f.input :nombre_subestacion ,label: 'Nomenclatura',class_html: { class: 'form-control' }  %>
              </div>
           </div>
           <div class="col-xs-6 col-md-4">
             <div class="form-group">
              <%= f.input :subestacion_abbr,label: 'Abbr',class_html: { class: 'form-control' }  %>
              </div>
           </div>
           <div class="col-xs-6 col-md-4">
             <div class="form-group">
                 <%= f.input :direccion ,label: 'Dirección',class_html: { class: 'form-control' }  %>
             </div>
           </div>
        </div>
        <div class="row">
           <div class="col-xs-6 col-md-4">
             <div class="form-group">
              <%= f.input :extencion,label: 'Extensión',class_html: { class: 'form-control' }  %>
              </div>
           </div>
           <div class="col-xs-6 col-md-4">
             <div class="form-group">
             <%= f.input :encargado_nombre,label: 'Nombre del encargado',class_html: { class: 'form-control' }  %>
              </div>
           </div>
           <div class="col-xs-6 col-md-4">
             <div class="form-group">
                <%= f.input :encargado_apellidos, label: 'Apellido del encargado',class_html: { class: 'form-control' }  %>
             </div>
           </div>
        </div>
        <div class="row">
           <div class="col-xs-6 col-md-4">
             <div class="form-group">
              <%= f.input :capacidad,label: 'Capacidad',class_html: { class: 'form-control' }  %>
              </div>
           </div>
           <div class="col-xs-6 col-md-4">
             <div class="form-group">
             <%= f.input :fecha_puesta_servicio,start_year: Date.today.year - 57, end_year: Date.today.year ,discard_day: true , order: [:month, :year] %>
              </div> 
           </div>
        </div>
        <div class="row">
           <div class="col-xs-6 col-md-4">
             <div class="form-group">
             <%= f.input :latitude ,label: 'Latitud',class_html: { class: 'form-control' }  %>
              </div>
           </div>
           <div class="col-xs-6 col-md-4">
             <div class="form-group">
             <%= f.input :longitude ,label: 'Longitud',class_html: { class: 'form-control' }  %>
              </div>
           </div>
        </div>
        <div class="row"><br></div>
        <div class="row"><br></div>
        <div class="row"><br></div>
        <div class="row show-grid">
          <div class="col-md-3"></div>
          <div class="col-md-4 col-md-offset-5 float_right">
              <div class="btn-toolbar" role="toolbar" aria-label="...">
                 <div class="btn-group" role="group" aria-label="...">
                    <button  class="btn btn-default" type="submit" >
                        <i class="fa fa-check" aria-hidden="true"></i> Crear Subestación
                    </button>
                 </div>
                 <div class="btn-group" role="group" aria-label="...">
                    <%= link_to '<button type="submit" class="btn btn-default" ><i class="fa fa-ban" aria-hidden="true"></i> Cancelar
                    </button>'.html_safe, control_substations_path %>
                    <% end %>
                 </div>
              </div>
          </div>
        </div>
      </div>
   </div>
</div>


