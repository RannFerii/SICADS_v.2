


         <%= simple_form_for(['medition',@measurement_equipment]) do |f| %>
          <%= f.error_notification %>
          <div class="row"><br></div>
          <div class="row"><br></div>
          <div class="row">   
             <div class="col-xs-6 col-md-4">
               <div class="form-group">  
                <%= f.input :modelo,label: 'Modelo',class_html: { class: 'form-control' }  %>
                </div>
             </div>
             <div class="col-xs-6 col-md-4">
               <div class="form-group">  
                <%= f.input :marca ,label: 'Marca',class_html: { class: 'form-control' }  %>
                </div>
             </div>
             <div class="col-xs-6 col-md-4">
               <div class="form-group">  
                 <%= f.input :num_inv_eimp ,label: 'Numero  inv eimp',class_html: { class: 'form-control' }  %>
               </div>
             </div>
          </div>
          <div class="row"><br></div>
          <div class="row">
             <div class="col-xs-6 col-md-4">
               <div class="form-group">  
                <%= f.input :num_serie,label: 'Numero de serie',class_html: { class: 'form-control' }  %>
              </div>
             </div>
             <div class="col-xs-6 col-md-4">
              <div class="form-group">  
                 <%= f.label :tipo_de_equipo_de_medición,class:"col-sm-10 control-label" %>
                <div class="col-sm-10">
                  <%= f.select :equipo_medicion_type, MeasurementEquipment.equipo_medicion_types.keys.to_a, { prompt: '- Seleccionar -' },{class:"selectpicker show-tick"}  %> 
                </div>
              </div>
             </div>
          </div>
          <div class="row"><br></div>
          <div class="row"><br></div>
          <div class="row"><br></div>
          <div class="row show-grid">
            <div class="col-md-3"></div>
            <div class="col-md-4 col-md-offset-5 float_right">
                <div class="btn-toolbar" role="toolbar" aria-label="...">
                   <div class="btn-group" role="group" aria-label="...">
                      <button  class="btn btn-default" type="submit" >  
                          <i class="fa fa-check" aria-hidden="true"></i> Crear equipo de medición
                      </button>
                   </div>
                   <div class="btn-group" role="group" aria-label="...">
                      <%= link_to '<button type="submit" class="btn btn-default" ><i class="fa fa-ban" aria-hidden="true"></i> Cancelar
                      </button>'.html_safe, medition_measurement_equipments_path %>
                      <% end %>
                   </div>
                </div>
            </div>
          </div>
      </div>
  </div>
</div>
      


