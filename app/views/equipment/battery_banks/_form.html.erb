
         <%= simple_form_for(['equipment',@battery_bank]) do |f| %>
          <%= f.error_notification %>
          <div class="row"><br></div>
          <div class="row">
             <div class="col-xs-6 col-md-4">
               <div class="form-group">
                <%= f.input :nomenclatura  ,label: 'Nomenclatura',class_html: { class: 'form-control' }  %>
                </div>
             </div>
             <div class="col-xs-6 col-md-4">
               <div class="form-group">
                <%= f.input :marca,label: 'Marca',class_html: { class: 'form-control' }  %>
                </div>
             </div>
             <div class="col-xs-6 col-md-4">
               <div class="form-group">
                 <%= f.input :fecha_puesta_servicio,start_year: Date.today.year - 57, end_year: Date.today.year ,discard_day: true , order: [:month, :year] %>
               </div>
             </div>
          </div>
          <div class="row">
             <div class="col-xs-6 col-md-4">
               <div class="form-group">
                  <%= f.input :num_celdas ,label: 'Numero de celdas',class_html: { class: 'form-control' }  %>
               </div>
             </div>
             <div class="col-xs-6 col-md-4">
               <div class="form-group">
                  <%= f.input :capacidad_ah,label: 'Capacidad ah',class_html: { class: 'form-control' }  %>
               </div>
             </div>
          </div>
          <div class="row">
             <div class="col-xs-6 col-md-4">
               <div class="form-group">
                  <%= f.input :volts_totales,label: 'Volts totales',class_html: { class: 'form-control' }  %>
               </div>
             </div>
             <div class="col-xs-6 col-md-4">
               <div class="form-group">
                <%= f.label :Tipo_de_banco_de_baterías,class:"col-sm-10 control-label" %>
                <div class="col-sm-10">
                  <%= f.select :banco_baterias_type, BatteryBank.banco_baterias_types.keys.to_a, { prompt: '- Seleccionar -' },{class:"selectpicker show-tick"}  %>
                </div>
              </div>
             </div>
          </div>
          <div class="row"><br></div>
          <div class="row"><br></div>
          <div class="row show-grid">
            <div class="col-md-3"></div>
            <div class="col-md-4 col-md-offset-5 float_right">
                <div class="btn-toolbar" role="toolbar" aria-label="...">
                   <div class="btn-group" role="group" aria-label="...">
                      <button  class="btn btn-default" type="submit" >
                          <i class="fa fa-check" aria-hidden="true"></i> Crear Banco de baterías
                      </button>
                   </div>
                   <div class="btn-group" role="group" aria-label="...">
                      <%= link_to '<button type="submit" class="btn btn-default" ><i class="fa fa-ban" aria-hidden="true"></i> Cancelar
                      </button>'.html_safe, equipment_battery_banks_path    %>
                      <% end %>
                   </div>
                </div>
            </div>
          </div>
      </div>
  </div>
</div>

