
         <%= simple_form_for(['equipment',@transformer]) do |f| %>
          <%= f.error_notification %>
          <div class="row"><br></div>
          <div class="row"><br></div>
          <div class="row">
             <div class="col-xs-6 col-md-4">
               <div class="form-group">  
                <%= f.input :nomenclatura  ,label: 'Nomenclatura',class_html: { class: 'form-control' }  %>
                </div>
             </div>
             <div class="col-xs-6 col-md-4">
               <div class="form-group">  
                 <%= f.input :phase_type ,label: 'Tipo de Fase',class_html: { class: 'form-control' }  %>
                </div>
             </div>
             <div class="col-xs-6 col-md-4">
               <div class="form-group">  
               <%= f.label :Tipo_de_transformador,class:"col-sm-10 control-label" %>
               <div class="col-sm-10">
                   <%= f.select :transformador_type, Transformer.transformador_types.keys.to_a, { prompt: 'Seleccionar' } ,{class:"selectpicker"} %>
                   </div>
                </div>
             </div>
          </div>
          <div class="row">
             <div class="col-xs-6 col-md-4">
               <div class="form-group">
                  <%= f.input :numero_activo_fijo,label: 'Numero activo fijo',class_html: { class: 'form-control' }  %>
               </div>
             </div>
             <div class="col-xs-6 col-md-4">
               <div class="form-group">
                 <%= f.input :fecha_puesta_servicio ,class_html: { class: 'form-control_input-md' }  %>
               </div>
             </div>
          </div>
            <table class='table'>
              <div class="page-header">
                <h1>Fases<small> del transformador</small></h1>
              </div>
              <tbody class='tasks'>
                <%= f.simple_fields_for :phases do |builder| %>
                  <%= render 'phase_fields', f: builder %>
                <% end %>
              </tbody>
            </table>
            <div class="form-actions">
              <%= link_to_add_association '<i class="fa fa-plus" aria-hidden="true"></i> Agregar Fase'.html_safe, f, :phases %>
            </div>
          <div class="row show-grid">
            <div class="col-md-3"></div>
            <div class="col-md-3 col-md-offset-5 float_right">
                <div class="btn-toolbar" role="toolbar" aria-label="...">
                   <div class="btn-group" role="group" aria-label="...">
                      <button  class="btn btn-default" type="submit" >  
                          <i class="fa fa-check" aria-hidden="true"></i> Crear transformador
                      </button>
                   </div>
                   <div class="btn-group" role="group" aria-label="...">
                      <%= link_to '<button type="submit" class="btn btn-default" ><i class="fa fa-ban" aria-hidden="true"></i> Cancelar
                      </button>'.html_safe, equipment_transformers_path  %>
                      <% end %>
                   </div>
                </div>
            </div>
          </div>
      </div>
  </div>
</div>
      
   