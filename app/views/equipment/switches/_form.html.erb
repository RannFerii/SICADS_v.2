
         <%= simple_form_for(['equipment',@switch]) do |f| %>
          <%= f.error_notification %>
          <div class="row"><br></div>
          <div class="row"><br></div>
          <div class="row">
             <div class="col-xs-6 col-md-4">
               <div class="form-group">  
                <%= f.input :nomenclatura  ,label: 'Nomenclatura',class_html: { class: 'form-control' }  %>
                </div>
             </div>
             <div class="col-xs-6 col-md-4">
               <div class="form-group">  
                <%= f.input :marca,label: 'Marca',class_html: { class: 'form-control' }  %>
                </div>
             </div>
             <div class="col-xs-6 col-md-4">
               <div class="form-group">  
                 <%= f.label :Tipo_de_interruptor ,class:"col-sm-10 control-label" %>
                <div class="col-sm-10">
                  <%= f.select :interruptor_type, Switch.interruptor_types.keys.to_a, { prompt: '- Seleccionar -' } ,{class:"selectpicker show-tick"}  %>
                </div>
              </div>
             </div>
          </div>
          <div class="row">
             <div class="col-xs-6 col-md-4">
               <div class="form-group">
                  <%= f.input :nivel_basico_impulso,label: 'Nivel basico de impulso',class_html: { class: 'form-control' }  %>
               </div>
             </div>
             <div class="col-xs-6 col-md-4">
               <div class="form-group">
                  <%= f.input :voltaje_control,label: 'Voltaje de control',class_html: { class: 'form-control' }  %>
               </div>
             </div>
             <div class="col-xs-6 col-md-4">
               <div class="form-group">  
                 <%= f.label :Tipo_de_mecanismo ,class:"col-sm-10 control-label" %>
                <div class="col-sm-10">
                  <%= f.select :mecanismo_type, Switch.mecanismo_types.keys.to_a, { prompt: '- Seleccionar -' },{class:"selectpicker show-tick"} %>
                </div>
              </div>
             </div>
          </div>
          <div class="row">
             <div class="col-xs-6 col-md-4">
               <div class="form-group">
                <%= f.input :num_serie,label: 'Numero de serie',class_html: { class: 'form-control_input-md' }  %>
               </div>
             </div>
             <div class="col-xs-6 col-md-4">
               <div class="form-group">
               <%= f.input :kv_nom,label:'Kv Nom',class_html: { class: 'form-control_input-md' }  %>
               </div>
             </div>
             <div class="col-xs-6 col-md-4">
               <div class="form-group">
                <%= f.input :amp_nom,label:'Amp Nom',class_html: { class: 'form-control_input-md' }  %>
               </div>
             </div>
          </div>
          <div class="row">
             <div class="col-xs-6 col-md-4">
               <div class="form-group">
                <%= f.input :tension_sistema,label: 'Tensión del sistema',class_html: { class: 'form-control_input-md' }  %>
               </div>
             </div>
             <div class="col-xs-6 col-md-4">
               <div class="form-group">
                <%= f.input :tension_fuerza,label: 'Tensión de fuerza',class_html: { class: 'form-control_input-md' }  %>
               </div>
             </div>
             <div class="col-xs-6 col-md-4">
               <div class="form-group">
                 <%= f.input :capacidad_interruptiva,label: 'Capacidad interruptiva',class_html: { class: 'form-control_input-md' }  %>
               </div>
             </div>
          </div>
          <div class="row">
             <div class="col-xs-6 col-md-4">
               <div class="form-group">
                <%= f.input :medio_ext ,label:'Medio ext',class_html: { class: 'form-control_input-md' }  %>
               </div>
             </div>
             <div class="col-xs-6 col-md-4">
               <div class="form-group">
                <%= f.input :fecha_puesta_servicio,label:'Fecha puesta en servicio',class_html: { class: 'form-control_input-md' }  %>
               </div>
             </div>
             <div class="col-xs-6 col-md-4">
               <div class="form-group">
                <%= f.input :fecha_fabricacion,label:'Fecha de fabricación',class_html: { class: 'form-control_input-md' }  %>
               </div>
             </div>
          </div>
          <div class="row"><br></div>
          <div class="row"><br></div>
          <div class="row"><br></div>
          <div class="row show-grid">
            <div class="col-md-3"></div>
            <div class="col-md-4 col-md-offset-5 float_right">
                <div class="btn-toolbar" role="toolbar" aria-label="...">
                   <div class="btn-group" role="group" aria-label="...">
                      <button  class="btn btn-default" type="submit" >  
                          <i class="fa fa-check" aria-hidden="true"></i> Crear interruptor
                      </button>
                   </div>
                   <div class="btn-group" role="group" aria-label="...">
                      <%= link_to '<button type="submit" class="btn btn-default" ><i class="fa fa-ban" aria-hidden="true"></i> Cancelar
                      </button>'.html_safe,equipment_switches_path %>
                      <% end %>
                   </div>
                </div>
            </div>
          </div>
      </div>
  </div>
</div>
      

