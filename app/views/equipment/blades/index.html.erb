<div class="container-fluid">
  <header class="row col-sm-12">
    <div class="page-header">
    <img src=/img/cuchilla.png  class="img-responsive transformer"> &nbsp;  &nbsp;   &nbsp; 
      <h1>Cuchillas</h1> &nbsp; <br>  &nbsp; 
      <%= link_to '<button type="button" class="btn btn-default"><i class="fa fa-plus" aria-hidden="true">
      </i> Nueva Cuchilla</button>'.html_safe,new_equipment_blade_path %>
    </div>
  </header>
  <div class="row col-sm-12">
    <nav class="col-sm-2">
      <ul class="nav nav-pills nav-stacked">
        <li> <h3><small>Control</small></h3></li>
        <li> <%= link_to 'Bahías', control_bays_path %></li>
        <li>  <%= link_to 'Subestaciones', control_substations_path %></li>
        <li> <h3><small><b>Equipo primario</b></small></h3></li>
        <li>  <%= link_to 'Transformadores', equipment_transformers_path %> </li>
        <li>  <%= link_to 'Reactores', equipment_reactors_path %></li>
        <li>  <%= link_to 'Banco de baterias', equipment_battery_banks_path %></li>
        <li class="active">   <%= link_to 'Cuchillas', equipment_blades_path %></li>
        <li>  <%= link_to 'Apartarrayos', equipment_lightning_arresters_path %></li>
        <li>  <%= link_to 'Interruptores', equipment_switches_path %></li>
        <li> <h3><small><b>Equipo de medición</b></small></h3></li> 
        <li>  <%= link_to 'Calibración', medition_calibrations_path %></li>
        <li>  <%= link_to 'Equipo', medition_measurement_equipments_path %></li>
      </ul>
    </nav>
    <section class="col-sm-10">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"> <i class="fa fa-list-alt" aria-hidden="true"></i> Lista</h3>
        </div>
        <div class="panel-body">
         <div class="container">
           <div class="row">
             <div class="col-md-3 search">
               <form action="#" method="get">
                 <div class="input-group">
                  <input class="form-control" id="system-search" name="q" placeholder="Buscar..." required>
                    <span class="input-group-btn">
                      <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                    </span>
                 </div>
               </form>
             </div>
             <br>
             <div class="col-md-9">
                 <table class="table table-list-search">
                  <thead>
                    <tr>
                      <th>Nomenclatura</th>
                      <th>Tipo de Cuchilla </th>
                      <th>Tipo de Mecanismo </th>
                      <th>Ver</th>
                      <th>Editar</th>
                      <th>Eliminar</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @blades.each do |blade| %>
                      <tr>
                        <td><%= blade.nomenclatura %></td>
                        <td><%= blade.cuchilla_type %></td>
                        <td><%= blade.mecanismo_type %></td>
                        <td><%= link_to '<button type="button" class="btn btn-default"><i class="fa fa-info" aria-hidden="true"></i></button>'.html_safe, equipment_blade_path(blade)  %></td>
                        <td><%= link_to '<button type="button" class="btn btn-default"><i class="fa fa-pencil" aria-hidden="true"></i></button>'.html_safe, edit_equipment_blade_path(blade) %></td>
                        <td><%= link_to '<button type="button" class="btn btn-default"><i class="fa fa-times" aria-hidden="true"></i></button>'.html_safe, equipment_blade_path(blade), method: :delete, data: { confirm: 'Seguro de eliminar este elemento?' } %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
             </div>
           </div>
         </div>
        </div>
      </div>
    </section>
  </div>
</div>
<div class="margin_footer"></div>